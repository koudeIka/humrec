jQuery(document).ready(function() {

	function initAdd()
	{
		$('#new_add')
			.unbind()
			.button({
				text: true,
				icons: {
					primary: "ui-icon-plusthick"
				}
			})
			.click(function() {

					$.post(
						"ajax/new.ajax.php",
						{
							action: "add_new"
						},
						function(data)
						{
							var tmp = data.split(":::");
							$('#liste_accueil').append(tmp[1]);
							initList();
							$('#acc_id_'+tmp[0]).dblclick();
						}
					);
			});
	}

	initAdd();
});